.nav__list {
    text-align: justify;
    line-height: 0;

    /* Opera Presto */
    font-size: 1px;

    /* IE6-7 */
    //text-justify: newspaper;
    //zoom: 1;
    //text-align-last: justify;

    &::after {
        content: '';
        display: inline-block;
        width: 100%;
        height: 0;
        visibility: hidden;
        overflow: hidden;
    }

}

.nav__item {
    display: inline-block;
    text-align: left;

    /* Восстанавливаем обнулённые свойства */
    line-height: normal;
    font-size: 14px;

    /* Opera Presto */
    vertical-align: top;

}

.nav__link {
    display block;
    &:hover {
        .nav__icon svg * {
            fill: $hover-color;
        }
        .nav__title {
            color: $hover-color;
        }
    }
}

.nav__icon, .nav__title {
    vertical-align: middle;// Выравниваем icon с text  между собой
    display: inline-block;
}
.nav__icon {
    height: 48px;
    width: 48px;
}

svg * {
    fill: $background-color;
}

svg  {
    height: 100%;
    width: 100%; //Теперь можно масштабировать svg
}

.nav__title {
    color: $background-color;
    text-transform: uppercase;
    font-size: 18px;
}


