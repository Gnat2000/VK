.video__list {
    clearfix();
}
    .video__item {
        float: left;
        width: 20%;
        margin-bottom: 20px;
        padding: 25px;
    }
        .video__display {
            text-align: center;
            margin-bottom: 10px;
        }

            .video__link {
                display: block;
                width: 130px;
                text-align: center;
                height: 100px;
                margin: 0 auto;
            }
                .video__image {
                    display: block;
                    max-width: 100%;
                    max-height: 100%;
                }
                .video__title {
                    margin-top: 0;
                    font-weight: normal;
                }
                .video__duration {
                    clearfix();
                    padding: 0 27px 0 27px;
                }
                .video__time {
                    text-align center;
                    float: left;
                    height: 15px;
                }
                .video__date {
                    text-align: center;
                    float: right;
                    height: 15px
                }
                    .video__date-num, .video__time-dur, .video__views-text {
                        margin-top: 0;
                        font-weight: normal;
                        margin-bottom: 0;
                    }
                .video__views-text {
                    text-align center;
                }