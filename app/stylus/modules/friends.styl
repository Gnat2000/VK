.friends__list {
    clearfix();
}
    .friends__item {
        float: left;
        width: 20%;
        min-height: 180px;
        margin-bottom: 20px;
    }
        .friends__name {
            text-align center;
            open-sans(bold);
            font-size: 15px;
        }

        .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50% 50%;
            overflow: hidden;
            border: 4px solid transparent;
            margin: 0 auto;

            &:hover {
                border-color: $hover-color;
            }
        }
            .avatar__img {
                width: 100%;
            }
        .friends__city {
            text-align: center;
        }
        .friends__country {
            text-align: center;
            open-sans(semibold);
        }
